<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">

    <php>
        <server name="CAMPFIRE_SUBDOMAIN" value="" />
        <server name="CAMPFIRE_ROOM" value="" />
        <server name="CAMPFIRE_KEY" value="" />
    </php>
    <testsuites>
        <testsuite name="instance">
            <directory suffix="Test.php">tests/instance</directory>
        </testsuite>
        <testsuite name="message">
            <directory suffix="Test.php">tests/message</directory>
        </testsuite>
        <testsuite name="queue">
            <directory suffix="Test.php">tests/queue</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory suffix=".php">PEAR_INSTALL_DIR</directory>
            <directory suffix=".php">PHP_LIBDIR</directory>
            <directory suffix=".php">../vendor</directory>
        </blacklist>
    </filter>
</phpunit>